# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/hitchhub_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=hitchhub_user
DATABASE_PASSWORD=your_secure_password
DATABASE_NAME=hitchhub_dev

# Redis Configuration (for real-time features)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Email Service (Resend)
RESEND_API_KEY=re_your_api_key_here
FROM_EMAIL=noreply@hitchhub.app

# Authentication
JWT_SECRET=your-super-secure-random-string-here-min-32-chars
JWT_EXPIRES_IN=7d
MAGIC_LINK_EXPIRES_IN=15m

# Application
PORT=3000
NODE_ENV=development
API_VERSION=v1

# Frontend (for CORS and redirects)
FRONTEND_URL=http://localhost:3000
MOBILE_APP_SCHEME=hitchhub://

# External APIs (for social media integration)
TIKTOK_API_KEY=your_tiktok_key
INSTAGRAM_ACCESS_TOKEN=your_instagram_token

# File Upload (if using cloud storage)
AWS_S3_BUCKET=hitchhub-photos
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret